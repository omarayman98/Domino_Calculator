    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_view_gold">

    <TextView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:text="Play Draw Dominos\n 1vs1"
        android:gravity="center"/>

